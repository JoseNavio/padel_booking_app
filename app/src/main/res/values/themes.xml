<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Padel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColorHint">@color/gray</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/FloatingButton</item>
    </style>

    <!--Floating button-->
    <style name="FloatingButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/teal_700</item>
        <item name="tint">@color/black</item>
        <item name="rippleColor">@color/purple_500</item>
        <item name="shapeAppearance">@style/CustomShape</item>
    </style>

    <style name="CustomShape" parent="Widget.Material3.ActionMode">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomRight">12dp</item>12
    </style>

    <!-- SquareFloatingActionButton -->
    <style name="SquareFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/purple_500</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearanceOverlay">@style/SquareShapeOverlay</item>
    </style>

    <style name="SquareShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <!--Material calendar-->
    <style name="MaterialCalendarThemeBackground" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarStyle">@style/CustomMaterialCalendar</item>
    </style>

    <style name="CustomMaterialCalendar" parent="Widget.MaterialComponents.MaterialCalendar">

        <item name="daySelectedStyle">@style/CustomSelectedDay</item>
        <item name="dayStyle">@style/CustomValidDay</item>
        <item name="dayInvalidStyle">@style/CustomInvalidDay</item>

    </style>

    <style name= "CustomSelectedDay" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="itemFillColor">@color/purple_500</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="CustomValidDay" parent="Widget.MaterialComponents.MaterialCalendar.Day">
        <item name="itemFillColor">@color/purple_200</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="CustomInvalidDay" parent="Widget.MaterialComponents.MaterialCalendar.Day.Invalid">
        <item name="itemTextColor">@color/teal_700</item>
    </style>

</resources>